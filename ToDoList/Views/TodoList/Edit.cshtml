@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model ToDo

<h3 class="text-center">To Do Edit Page</h3>
<form method="post" asp-action="Edit" asp-controller="TodoList">
    <div class="md-3">
        <label asp-for="Description" class="form-label">Content</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-warning">Add</button>
    </div>
</form>